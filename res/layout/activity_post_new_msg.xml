<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PostNewMsg" >

    <TextView
        android:id="@+id/textView_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="Say Something?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_nickname"
        android:layout_below="@+id/textView_nickname"
        android:layout_marginTop="26dp"
        android:ems="10" />

    <Button
        android:id="@+id/button_post_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:text="POST IT!" />

    <EditText
        android:id="@+id/editText_post_locationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_post_submit"
        android:layout_alignLeft="@+id/button_post_submit"
        android:ems="10" />

    <TextView
        android:id="@+id/textView_profileview_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_post_locationtext"
        android:layout_alignLeft="@+id/editText_post_locationtext"
        android:text="Describe location so others can find you"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/text_post_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_profileview_age"
        android:layout_alignLeft="@+id/textView_profileview_age"
        android:layout_marginBottom="24dp"
        android:text="Latitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_profile_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_post_latitude"
        android:layout_alignParentLeft="true"
        android:text="CurrentLatitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView_profileview_age"
        android:layout_centerVertical="true"
        android:text="CurrentLongitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_post_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_post_latitude"
        android:layout_alignBottom="@+id/text_post_latitude"
        android:layout_alignLeft="@+id/textView4"
        android:text="Longitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner_range_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_profile_view_status"
        android:layout_toRightOf="@+id/textView_profile_view_status" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_range_post"
        android:layout_alignLeft="@+id/editText_post_content"
        android:layout_alignRight="@+id/textView_profile_view_status"
        android:layout_alignTop="@+id/spinner_range_post"
        android:text="PostRange/meter"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
